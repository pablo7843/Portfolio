---
const trabajos = [
    {
        title: 'Dragon Ball API',
        description: 'Dragon Ball API application',
        image: './src/assets/dragon ball.webp',
        technologies: ['HTML5', 'CSS3', 'JavaScript']
    },
    {
        title: 'Bank App',
        description: 'Sistema de gesti칩n bancaria',
        image: './src/assets/banco.webp',
        technologies: ['Kotlin']
    },
    {
        title: 'Music web reproducer',
        description: 'Reproducer online',
        image: './src/assets/harmoniq.png',
        technologies: ['Spring', 'HTML5', 'CSS3', 'JavaScript', 'Kotlin', 'MySQL']
    }
];

const getTechIcon = (tech: string) => {
    const name = tech.toLowerCase().replace(/\s+/g, '');
    return `https://cdn.jsdelivr.net/gh/devicons/devicon/icons/${name}/${name}-original.svg`;
};

const getTechColor = (tech: string) => {
    const colors: Record<string, string> = {
        'html5': '#E34C26',
        'css3': '#563D7C',
        'javascript': '#F7DF1E',
        'kotlin': '#7F52FF',
        'spring': '#6DB33F',
        'mysql': '#00758F'
    };
    return colors[tech.toLowerCase().replace(/\s+/g, '')] || '#cccccc';
};
---
<p class="titulo-trabajos"><h2>Trabajos</h2></p>
<div class="trabajos-container">
    {trabajos.map(trabajo => (
        <div class="trabajo-card">
            <img id="imagen-trabajo" src={trabajo.image} alt={trabajo.title} style="height: 200px; width: 100%; object-fit: cover; object-position: bottom;" />
            <h3>{trabajo.title}</h3>
            <p class="descripcion">{trabajo.description}</p>
            <div class="tecnologias">
                {trabajo.technologies.map(tech => (
                    <span class="tech-badge" style={`background-color: ${getTechColor(tech)}`}>
                        <img src={getTechIcon(tech)} alt={tech} class="tech-icon" />
                        <span class="tech-name">{tech}</span>
                    </span>
                ))}
            </div>
            <!-- Bot칩n Saber m치s -->
            <button class="saber-mas-btn">Saber m치s</button>
        </div>
    ))}
</div>

<style>

    .saber-mas-btn {
        display: block;
        margin: 1rem auto 1rem auto;
        padding: 0.5rem 1rem;
        border: 2px solid var(--primary-color);
        border-radius: 6px;
        background-color: transparent;
        color: var(--primary-color);
        font-weight: 600;
        font-size: large;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
    }

    .saber-mas-btn:hover {
        background-color: var(--primary-color);
        color: var(--bg-dark);
        transform: translateY(-2px);
    }

    html.light-mode .saber-mas-btn {
        color: var(--primary-color);
        border-color: var(--primary-color);
    }

    html.light-mode .saber-mas-btn:hover {
        color: var(--bg-light-card);
    }

    h2 {
        font-size: 2.5rem;
        margin-bottom: 2rem;
        text-align: center;
        color: var(--text-primary);
    }

    .trabajos-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr); 
        gap: 2rem;
        padding: 2rem;
    }

    @media (max-width: 1024px) {
        .trabajos-container {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 640px) {
        .trabajos-container {
            grid-template-columns: 1fr;
        }
    }

    .trabajo-card {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, background-color 0.3s ease;
        background-color: var(--bg-dark);
    }

    html:not(.light-mode) .trabajo-card {
        background-color: var(--bg-dark-light);
    }

    .trabajo-card:hover {
        transform: translateY(-5px);
    }

    .trabajo-card img {
        width: 100%;
        height: 30px;
        object-fit: cover;
    }

    .trabajo-card h3 {
        padding: 1rem;
        margin: 0;
        font-size: 1.3rem;
        color: var(--text-primary);
    }

    .descripcion {
        padding: 0 1rem;
        color: var(--text-secondary);
        margin: 0.5rem 0;
    }

    .tecnologias {
        padding: 0 1rem 1rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .tech-badge {
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
        transition: all 0.3s ease;
    }

    .tech-badge:hover {
        transform: translateY(-2px);
        opacity: 0.8;
    }

    .tech-icon {
        width: 18px;
        height: 18px;
    }

    .tech-name {
        color: #fff; 
    }

    html.light-mode .tech-name {
        color: #333; 
    }

    html:not(.light-mode) .tech-name {
        color: #fff;
    }

    html.light-mode .trabajo-card {
        background-color: var(--bg-light-card);
    }
</style>